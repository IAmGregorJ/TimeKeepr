<Window x:Class="TimeKeepr.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeKeepr.WPF"
        xmlns:controls="clr-namespace:TimeKeepr.WPF.Controls"
        xmlns:me="clr-namespace:TimeKeepr.WPF.ViewModels"
        xmlns:p="clr-namespace:TimeKeepr.WPF.Localizations"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.TimeKeepr_txt}" Height="600" Width="450" WindowStyle="None" ResizeMode="NoResize" MouseLeftButtonDown="WindowMouseLeftButtonDown">
    <Window.Resources>
        <me:MainViewModel x:Key="viewModel"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <controls:NavigationBar Grid.Row="0" DataContext="{Binding Source={StaticResource viewModel}, Path=Navigator}"/>
        <ContentControl Grid.Row="1" Content="{Binding Source={StaticResource viewModel}, Path=Navigator.CurrentViewModel}"/>
    </Grid>
</Window>
